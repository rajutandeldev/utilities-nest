{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2020",
        "declaration": true, // Generates .d.ts files
        "outDir": "./dist", // Outputs compiled files to the dist folder
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*" // Make sure src is included
    ],
    "exclude": [
        "node_modules" // Exclude node_modules
    ]
}